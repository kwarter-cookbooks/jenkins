# nginx jenkins application vhost
#
# Generated by Chef for <%= node.name %>
# Local modifications will be overwritten.
#
<% if @www_redirect -%>
server {
<% @listen_ports.each do |port| -%>
  listen            <%= port %>;
<% end -%>
    server_name     www.<%= @host_name %>;
    rewrite ^/(.*)  http://<%= @host_name %>/$1 permanent;
}
<% end -%>

<% if node[:jenkins][:http_proxy][:ssl] %>
server {
<% @listen_ports.each do |port| -%>
  listen            <%= port %>;
<% end -%>
  server_name <%= @host_name %>;
  rewrite        ^ https://$server_name$request_uri? permanent;
}
<% end %>

server {
<% if node[:jenkins][:http_proxy][:ssl] %>
  listen <%= node[:jenkins][:http_proxy][:ssl_port] %> ssl;
<% else %>
  <% @listen_ports.each do |port| -%>
  listen            <%= port %>;
  <% end -%>
<% end %>
  server_name       <%= @host_name %><% @host_aliases.each do |a| %><%= " #{a}" %> <% end %>;

<% unless node[:jenkins][:http_proxy][:allow_ips].empty? %>
<% node[:jenkins][:http_proxy][:allow_ips].each do |ip| %>
  allow <%= ip %>;
<% end %>
  deny all;
<% end %>

  error_log         <%= node[:nginx][:log_dir] %>/jenkins-error.log;
  access_log        <%= node[:nginx][:log_dir] %>/jenkins-access.log;

<% if node[:jenkins][:http_proxy][:ssl_enabled] %>
  ssl_certificate <%= @ssl_cert %>;
  ssl_certificate_key <%= @ssl_key %>;
<% end %>

  client_max_body_size <%= @max_upload_size %>;

  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;

    proxy_pass http://127.0.0.1:<%= node[:jenkins][:server][:port] %>;
<% if node[:jenkins][:http_proxy][:ssl] %>
    proxy_redirect http://<%= @host_name %> /;
<% end %>
  }
}
